<UserControl
    x:Class="DBLauncher.Controls.InfoTag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DBLauncher.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Border Padding="4" Background="#7F1E1E1E" CornerRadius="5">
                <TextBlock Text="{x:Bind TagName}" Foreground="#E4E8E8E8" VerticalAlignment="Center"/>
            </Border>
            <TextBox Text="{x:Bind Key}" Margin="7, 0, 0, 0" Foreground="#E4E8E8E8" IsReadOnly="True" VerticalAlignment="Center" CornerRadius="5" x:Name="EditBox" LostFocus="EditBox_LostFocus"/>
        </StackPanel>
    </Grid>
</UserControl>
